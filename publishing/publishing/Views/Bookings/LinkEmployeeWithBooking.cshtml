@model IEnumerable<publishing.Models.Employee>

@{
    ViewData["Title"] = "Привязка сотрудников";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Привязка сотрудников</h1>
<form method="post" class="form-group" onsubmit="CheckBoxes('Пожалуйста, выберите сотрудника(-ов) для привязки к заказу')">
    @{
        if (Model.Count() != 0)
        {
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            Выбрать
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Middlename)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Информация о сотруднике
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(m => m.Surname))
                    {
                        <tr>
                            <td>
                               <input type="checkbox" class="check_box" name="selectedEmployees" id="@item.Id" value="@item.Id">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Middlename)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Birthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td style="width:250px;">
                                <a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Подробнее</a>
                                <input type="hidden" name="bookingId" value="@ViewBag.bookingId">
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group pt-3" style="margin-top: -15px;">
                <input type="submit" value="Привязать" class="btn btn-success" />
            </div>
        }
        else
        {
            <h4 style="margin-top:7px;">Сотрудники отсутствуют</h4>
        }
    }
</form>
