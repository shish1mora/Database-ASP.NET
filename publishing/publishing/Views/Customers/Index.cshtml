@model IEnumerable<publishing.Models.Customer>

@{
    ViewData["Title"] = "Список заказчиков";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список заказчиков</h1>

@*<p>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create">Добавить заказчика</a>
    }
</p>*@

@if (Model.Count() > 0)
{
    <div class="info">
        <input id="info__body_1" class="info__switch" type="checkbox">
        <label for="info__body_1" class="info__headline">Фильтрация данных</label>
        <div class="info__body">
            <form method="get">
                <div class="d-flex">
                    <div class="d-inline-block">
                        <label>Наименование: </label>
                    </div>
                    <div class="d-inline-block" style="margin-left:7px;">
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="d-inline-block" style="margin-left:10px;">
                        <label>Номер телефона: </label>
                    </div>
                    <div class="d-inline-block" style="margin-left:7px;">
                        <input type="text" name="phoneNumber" class="form-control">
                    </div>
                    <div class="d-inline-block" style="margin-left:10px;">
                        <label>Электронная почта: </label>
                    </div>
                    <div class="d-inline-block" style="margin-left:7px;">
                        <input type="text" name="email" class="form-control">
                    </div>
                    <div class="d-inline-block" style="margin-left:10px;">
                        <input type="submit" value="Поиск" class="btn btn-primary" style="margin-top:5px;" />
                    </div>
                    <div class="d-inline-block" style="margin-left:10px;">
                        <a asp-action="Index" class="btn btn-primary" style="margin-top:5px;">Сброс</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(m => m.Name))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @* @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                        <span>| </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        <span>| </span>
                    }*@
                        <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
