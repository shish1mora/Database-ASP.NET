@model publishing.Models.PrintingHouse

@{
    ViewData["Title"] = "Удаление типографии";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string address = $"{Model.City}, {Model.Street}, {Model.House}";
}

<h1>Удаление типографии</h1>
<script src="https://api-maps.yandex.ru/2.1/?apikey=094078ac-b2f8-43b8-a414-702a2e9f3ea8&lang=ru_RU" type="text/javascript"></script>
<script type="text/javascript">
    function init() {
        var myMap = new ymaps.Map('map', {
            center: [55.74, 37.58],
            zoom: 13,
            controls: []
        });


        var searchControl = new ymaps.control.SearchControl({
            options: {
                provider: 'yandex#search'
            }
        });

        myMap.controls.add(searchControl);

        searchControl.search('@Html.Raw(address)');
    }
    ymaps.ready(init);

</script>

<h3>Вы уверены,что хотите удалить эту типографию?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.House)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.House)
        </dd>
        <dt id="map" style="height:500px; width:100%;"></dt>
        <dt style="margin-bottom:10px; margin-top:10px;">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            <textarea asp-for="Description" id="summernote" class="form-control"></textarea>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку типографий</a>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 150,
                disableDragAndDrop: true,
                disableResizeEditor: true
            });
            $('#summernote').summernote('disable');
        });
    </script>
}




