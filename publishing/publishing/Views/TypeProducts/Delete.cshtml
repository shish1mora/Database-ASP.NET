@model publishing.Models.TypeProduct

@{
    ViewData["Title"] = "Удаление типа продукции";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление типа продукции</h1>

<h3>Вы уверены,что хотите удалить этот тип?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Margin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Margin)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку типов продукции</a>
    </form>
</div>
